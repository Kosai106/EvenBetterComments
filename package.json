	},
	"bugs": "https://github.com/Zxynine/EvenBetterComments/issues",
	"categories": [
		"Formatters"
	],
	"engines": {
		"vscode": "^1.68.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "tslint -c tslint.json 'src/**/*.ts'"
	},
	"contributes": {
		"commands": [
			{
				"title": "EvenBetterComments: Reload Configuration",
				"command": "evenbettercomments.reloadConfiguration"
			},
			{
				"title": "EvenBetterComments: Reload Decorations",
				"command": "evenbettercomments.reloadDecorations"
			},
			{
				"title": "BetterHyperScopes: Show Scopes",
				"command": "vscode-show-scopes.show",
				"when": "editorTextFocus"
			},
			{
				"title": "BetterHyperScopes: Show Scopes Full Line",
				"command": "vscode-show-scopes.show-line",
				"when": "editorTextFocus"
			},
			{
				"title": "BetterHyperScopes: Show Inspector",
				"command": "vscode-show-scopes.show-inspector",
				"when": "editorTextFocus"
			},
			{
				"title": "BetterHyperScopes: Reload Document Tokens",
				"command": "hscopes-booster.reloadDocuments"
			},
			{
				"title": "BetterHyperScopes: Reload Grammar Scopes",
				"command": "hscopes-booster.reloadGrammar"
			}
		],
